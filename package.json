{
  "name": "@masaajid/prayer-times",
  "version": "1.0.0",
  "description": "Precise TypeScript prayer times library with Jean Meeus algorithms, object-based configuration, and multiple supported methods",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun run clean && bun run bundle && bun run types",
    "clean": "rm -rf dist .tsbuildinfo",
    "bundle": "bun build src/index.ts --outdir=dist --target=node --format=esm --minify",
    "types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "prepare": "bunx husky && bun run build",
    "prepublishOnly": "bun run typecheck && bun run test && bun run build",
    "prepack": "bun run build"
  },
  "keywords": [
    "prayer-times",
    "salah",
    "islamic",
    "muslim",
    "typescript",
    "javascript",
    "bun",
    "calculation",
    "qibla",
    "hijri",
    "praytimes",
    "adhan",
    "mosque",
    "ramadan"
  ],
  "author": "Masaajid Project",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/masaajid-hub/prayer-times.git"
  },
  "bugs": {
    "url": "https://github.com/masaajid-hub/prayer-times/issues"
  },
  "homepage": "https://github.com/masaajid-hub/prayer-times#readme",
  "engines": {
    "node": ">=16.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.0",
    "bun-types": "^1.2.22",
    "@types/bun": "^1.2.22",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "type": "module",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{js,jsx,json,mjs,cjs,css,scss,less,html,md,yaml,yml}": [
      "prettier --write --cache --ignore-unknown"
    ]
  }
}
